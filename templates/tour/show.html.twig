{% extends 'base.html.twig' %}

{% block title %}Tour{% endblock %}

{% block body %}
    <h1>Tour</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tour.id }}</td>
            </tr>
            <tr>
                <th>Titulo</th>
                <td>{{ tour.titulo }}</td>
            </tr>
            <tr>
                <th>Imagen</th>
                <td>
                <img src=/img/{{ tour.imagen }}>
                </td>
            </tr>
            <tr>
                <th>Categoria</th>
                <td>{{ tour.categoria }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ tour.description }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ tour.date }}</td>
            </tr>
            <tr>
                <th>Days</th>
                <td>{{ tour.days }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ tour.price }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('tour_index') }}">back to list</a>

    <a href="{{ path('tour_edit', {'id': tour.id}) }}">edit</a>

    {{ include('tour/_delete_form.html.twig') }}
{% endblock %}
